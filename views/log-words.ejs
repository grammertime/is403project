<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Log Words - <%= project.title %></title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
<style>
  body {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    min-height: 100vh;
    font-family: 'Inter', sans-serif;
    padding: 2rem 0;
  }

  .card {
    max-width: 800px;
    margin: 0 auto;
    background: white;
    border-radius: 1.5rem;
    padding: 2.5rem;
    box-shadow: 0 1rem 3rem rgba(0,0,0,0.2);
    animation: slideIn 0.5s ease-out;
  }

  @keyframes slideIn {
    from { opacity: 0; transform: translateY(-30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  h2 {
    color: #667eea;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .project-info {
    background: #e0e7ff;
    padding: 1.5rem;
    border-radius: 1rem;
    margin-bottom: 2rem;
  }

  .progress {
    height: 25px;
    border-radius: 0.5rem;
    margin-top: 1rem;
  }

  textarea, input[type="number"] {
    width: 100%;
    padding: 0.75rem;
    border-radius: 0.75rem;
    border: 1px solid #d1d5db;
    font-size: 1rem;
    margin-bottom: 1rem;
  }

  textarea {
    font-family: 'Inter', sans-serif;
    resize: vertical;
  }

  .btn-primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border: none;
    padding: 0.75rem 2rem;
    font-weight: 600;
    color: white;
    cursor: pointer;
    width: 100%;
    transition: transform 0.2s, box-shadow 0.2s;
    border-radius: 0.75rem;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 0.5rem 1rem rgba(102, 126, 234, 0.4);
    color: white;
  }

  .word-count-display {
    font-weight: 700;
    color: #667eea;
    font-size: 1.5rem;
    text-align: center;
    margin: 1rem 0;
    padding: 1rem;
    background: #f3f4f6;
    border-radius: 0.75rem;
  }

  label {
    font-weight: 600;
    color: #374151;
    display: block;
    margin-bottom: 0.5rem;
  }

  .divider {
    text-align: center;
    margin: 2rem 0;
    color: #9ca3af;
    font-weight: 600;
    position: relative;
  }

  .divider::before,
  .divider::after {
    content: '';
    position: absolute;
    top: 50%;
    width: 40%;
    height: 1px;
    background: #d1d5db;
  }

  .divider::before {
    left: 0;
  }

  .divider::after {
    right: 0;
  }

  .error {
    color: #ef4444;
    font-weight: 600;
    margin-bottom: 1rem;
    padding: 0.75rem;
    background: #fee2e2;
    border-radius: 0.5rem;
  }

  .success {
    color: #10b981;
    font-weight: 600;
    margin-bottom: 1rem;
    padding: 0.75rem;
    background: #d1fae5;
    border-radius: 0.5rem;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 1rem;
    margin-top: 1rem;
  }

  .stat-box {
    text-align: center;
    padding: 1rem;
    background: white;
    border-radius: 0.75rem;
  }

  .stat-label {
    font-size: 0.85rem;
    color: #6b7280;
    margin-bottom: 0.25rem;
  }

  .stat-value {
    font-size: 1.25rem;
    font-weight: 700;
    color: #374151;
  }

  .btn-secondary {
    background: #6b7280;
    color: white;
    border: none;
    padding: 0.75rem 2rem;
    font-weight: 600;
    text-align: center;
    text-decoration: none;
    display: block;
    width: 100%;
    transition: background 0.2s;
    border-radius: 0.75rem;
    margin-top: 0.5rem;
  }

  .btn-secondary:hover {
    background: #4b5563;
    color: white;
  }
</style>
</head>
<body>
<div class="container">
  <div class="card">
    <div class="d-flex justify-content-between align-items-start mb-4">
      <div>
        <h2>üìù Log Today's Writing</h2>
        <h4 class="text-muted"><%= project.title %></h4>
      </div>
      <a href="/dashboard" class="btn btn-outline-secondary">‚Üê Back</a>
    </div>

    <!-- Project Info Box -->
    <div class="project-info">
      <h5 class="mb-3">Current Progress</h5>
      <div class="d-flex justify-content-between mb-2">
        <span><strong><%= project.current_words.toLocaleString() %></strong> / <%= project.target_words.toLocaleString() %> words</span>
        <span><strong><%= Math.round((project.current_words / project.target_words) * 100) %>%</strong> complete</span>
      </div>
      <div class="progress">
        <div class="progress-bar bg-success" 
             style="width: <%= (project.current_words / project.target_words) * 100 %>%">
        </div>
      </div>
      
      <div class="stats-grid">
        <div class="stat-box">
          <div class="stat-label">Daily Goal</div>
          <div class="stat-value"><%= project.daily_goal.toLocaleString() %></div>
        </div>
        <div class="stat-box">
          <div class="stat-label">Remaining</div>
          <div class="stat-value"><%= (project.target_words - project.current_words).toLocaleString() %></div>
        </div>
        <div class="stat-box">
          <div class="stat-label">Genre</div>
          <div class="stat-value" style="font-size: 1rem;"><%= project.genre %></div>
        </div>
      </div>
    </div>

    <% if (typeof error_message !== 'undefined' && error_message) { %>
      <div class="error">
        <%= error_message %>
      </div>
    <% } %>

    <% if (typeof success_message !== 'undefined' && success_message) { %>
      <div class="success">
        <%= success_message %>
      </div>
    <% } %>

    <form action="/log-words/<%= project.id %>" method="POST" id="logForm">
      <!-- Option 1: Paste Text -->
      <div class="mb-4">
        <label for="text">Option 1: Paste Your Writing</label>
        <textarea id="text" name="text" rows="8" 
                  placeholder="Paste your writing here and we'll count the words for you..."></textarea>
        
        <div class="word-count-display" id="wordCountDisplay">
          Words: <span id="count">0</span>
        </div>
      </div>

      <div class="divider">OR</div>

      <!-- Option 2: Manual Entry -->
      <div class="mb-4">
        <label for="manual">Option 2: Enter Word Count Manually</label>
        <input type="number" id="manual" name="manual_count" 
               placeholder="e.g., 1500" min="0">
        <small class="text-muted">If you've already counted your words elsewhere</small>
      </div>

      <button type="submit" class="btn btn-primary">‚úÖ Submit Word Count</button>
      <a href="/dashboard" class="btn-secondary">Cancel</a>
    </form>
  </div>
</div>

<script>
  const textArea = document.getElementById('text');
  const countDisplay = document.getElementById('count');
  const manualInput = document.getElementById('manual');

  // TODO: Replace this with your teammate's word counting function
  function countWords(text) {
    // Placeholder function - your teammate will implement this
    if (!text || !text.trim()) return 0;
    return text.trim().split(/\s+/).length;
  }

  textArea.addEventListener('input', () => {
    const text = textArea.value;
    const words = countWords(text);
    countDisplay.textContent = words;
    
    // Clear manual input when typing in textarea
    if (text) {
      manualInput.value = '';
    }
  });

  // Clear textarea when entering manual count
  manualInput.addEventListener('input', () => {
    if (manualInput.value) {
      textArea.value = '';
      countDisplay.textContent = '0';
    }
  });

  // Form validation
  document.getElementById('logForm').addEventListener('submit', (e) => {
    const hasText = textArea.value.trim().length > 0;
    const hasManual = manualInput.value && parseInt(manualInput.value) > 0;
    
    if (!hasText && !hasManual) {
      e.preventDefault();
      alert('Please either paste your writing or enter a word count.');
    }
  });
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>