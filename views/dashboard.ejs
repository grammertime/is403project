<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Writing Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            font-family: 'Inter', sans-serif;
            padding: 2rem 0;
        }
        .dashboard-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 1rem;
        }
        .header-card {
            background: white;
            border-radius: 1rem;
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }
        .project-card {
            background: white;
            border-radius: 1rem;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            transition: transform 0.2s, box-shadow 0.2s;
        }
        .project-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.15);
        }
        .progress {
            height: 25px;
            border-radius: 0.5rem;
        }
        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
        }
        .btn-primary:hover {
            background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
        }
        .btn-manager {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            border: none;
            color: white;
        }
        .btn-manager:hover {
            background: linear-gradient(135deg, #f5576c 0%, #f093fb 100%);
            color: white;
        }
        .btn-success {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
            border: none;
            color: white;
            font-weight: 600;
        }
        .btn-success:hover {
            background: linear-gradient(135deg, #059669 0%, #10b981 100%);
            color: white;
        }
        .search-box {
            max-width: 400px;
        }
        .genre-badge {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            color: white;
            padding: 0.3rem 0.8rem;
            border-radius: 1rem;
            font-size: 0.85rem;
        }
        .stats-badge {
            background: #e0e7ff;
            color: #4f46e5;
            padding: 0.5rem 1rem;
            border-radius: 0.5rem;
            font-weight: 600;
        }
        .manager-badge {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            color: white;
            padding: 0.3rem 0.8rem;
            border-radius: 1rem;
            font-size: 0.85rem;
            font-weight: 600;
        }
    </style>
</head>
<body>
    <div class="dashboard-container">
        <!-- Header -->
        <div class="header-card">
            <div class="d-flex justify-content-between align-items-center flex-wrap">
                <div>
                    <h1 class="mb-2">üìö Writing Dashboard</h1>
                    <p class="text-muted mb-0">
                        Welcome back, <strong><%= username %></strong>!
                        <% if (isManager) { %>
                            <span class="manager-badge ms-2">üëë Manager</span>
                        <% } %>
                    </p>
                </div>
                <div class="d-flex gap-2 mt-3 mt-md-0 flex-wrap">
                    <a href="/add" class="btn btn-primary">+ New Project</a>
                    <a href="/stats" class="btn btn-outline-primary">üìä Statistics</a>
                    <% if (isManager) { %>
                        <a href="/manage-users" class="btn btn-manager">üë• Manage Users</a>
                    <% } %>
                    <a href="/logout" class="btn btn-outline-danger">Logout</a>
                </div>
            </div>
        </div>

        <!-- Search Bar -->
        <div class="header-card">
            <form action="/search" method="GET" class="d-flex gap-2">
                <input 
                    type="text" 
                    name="q" 
                    class="form-control search-box" 
                    placeholder="Search projects by title or genre..."
                    value="<%= typeof searchTerm !== 'undefined' ? searchTerm : '' %>"
                >
                <button type="submit" class="btn btn-primary">Search</button>
                <% if (typeof searchTerm !== 'undefined' && searchTerm) { %>
                    <a href="/dashboard" class="btn btn-outline-secondary">Clear</a>
                <% } %>
            </form>
        </div>

        <!-- Projects List -->
        <% if (projects.length === 0) { %>
            <div class="header-card text-center">
                <h3 class="text-muted">No projects found</h3>
                <p>Start your writing journey by creating your first project!</p>
                <a href="/add" class="btn btn-primary mt-3">Create Your First Project</a>
            </div>
        <% } else { %>
            <% projects.forEach(project => { %>
                <div class="project-card">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <div class="d-flex align-items-center gap-2 mb-2">
                                <h3 class="mb-0"><%= project.title %></h3>
                                <span class="genre-badge"><%= project.genre %></span>
                            </div>
                            
                            <div class="mb-3">
                                <div class="d-flex justify-content-between mb-1">
                                    <span><strong><%= project.current_words.toLocaleString() %></strong> / <%= project.target_words.toLocaleString() %> words</span>
                                    <span><strong><%= Math.round((project.current_words / project.target_words) * 100) %>%</strong></span>
                                </div>
                                <div class="progress">
                                    <div class="progress-bar bg-success" 
                                         style="width: <%= (project.current_words / project.target_words) * 100 %>%">
                                    </div>
                                </div>
                            </div>
                            
                            <div class="d-flex gap-3 flex-wrap">
                                <span class="stats-badge">üìÖ Started: <%= new Date(project.start_date).toLocaleDateString() %></span>
                                <span class="stats-badge">üéØ Daily Goal: <%= project.daily_goal %> words</span>
                                <span class="stats-badge">üìä Remaining: <%= (project.target_words - project.current_words).toLocaleString() %> words</span>
                            </div>
                        </div>
                        
                        <div class="col-md-4 text-md-end mt-3 mt-md-0">
                            <div class="d-flex flex-md-column gap-2 justify-content-end">
                                <a href="/log-words/<%= project.id %>" class="btn btn-success">üìù Log Words</a>
                                <a href="/edit/<%= project.id %>" class="btn btn-outline-primary">Edit</a>
                                <form action="/delete/<%= project.id %>" method="POST" 
                                      onsubmit="return confirm('Are you sure you want to delete this project?');">
                                    <button type="submit" class="btn btn-outline-danger w-100">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>